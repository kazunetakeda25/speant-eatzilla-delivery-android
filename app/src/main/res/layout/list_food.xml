<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/xxhdpi_10"
    android:paddingBottom="@dimen/xxhdpi_10"
    android:layout_marginTop="@dimen/xxhdpi_5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/add_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/list_cart_item_amt"
            android:orientation="vertical">


        </LinearLayout>

        <TextView
            android:id="@+id/item_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BBQ Chicken Wings"
            android:textColor="@color/black"
            android:textSize="@dimen/t_xxh_15"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/xxhdpi_10"
            android:layout_toLeftOf="@id/add_linear"
            android:drawableLeft="@drawable/ic_non_veg"
            android:drawablePadding="@dimen/xxhdpi_10"/>

        <TextView
            android:id="@+id/list_cart_item_amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/t_xxh_15"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="@dimen/xxhdpi_10"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="$129.00"/>

    </RelativeLayout>

</LinearLayout>