<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <include layout="@layout/layout_pickup_drop" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/xxhdpi_10"
        android:layout_marginBottom="@dimen/xxhdpi_5"
        android:background="@color/lit_grey" />

    <com.cooltechworks.views.shimmer.ShimmerRecyclerView
        android:id="@+id/task_food_list_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xxhdpi_10"
        android:layout_marginBottom="@dimen/xxhdpi_10"
        app:shimmer_demo_child_count="1"
        app:shimmer_demo_layout="@layout/demo_near_rest_recycler"
        app:shimmer_demo_layout_manager_type="linear_vertical"
        app:shimmer_demo_shimmer_color="@color/colorShim" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="@dimen/xxhdpi_5"
        android:background="@color/lit_grey" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xxhdpi_20"
        android:text="Restarunt Bill"
        android:textSize="@dimen/t_xxh_16" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xxhdpi_10">

        <TextView
            android:id="@+id/item_total_amount_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="$ 447.00"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/t_xxh_15" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/item_total_amount_txt"
            android:text="Item Total"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/t_xxh_15" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xxhdpi_10">

        <TextView
            android:id="@+id/item_total_discount_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text=" 447.00"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/t_xxh_15" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/item_total_discount_txt"
            android:text="Total Discount"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/t_xxh_15" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xxhdpi_10">

        <TextView
            android:id="@+id/offer_discount_amount_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="- $ 22.00"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/t_xxh_15" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/offer_discount_amount_txt"
            android:text="Offer Discount"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/t_xxh_15" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xxhdpi_10">

        <TextView
            android:id="@+id/packaging_charge_amount_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="$ 22.00"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/t_xxh_15" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/packaging_charge_amount_txt"
            android:text="Restaurant Packaging Charge"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/t_xxh_15" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xxhdpi_10">

        <TextView
            android:id="@+id/gst_amount_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="$ 22.00"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/t_xxh_15" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/gst_amount_txt"
            android:text="GST"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/t_xxh_15" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xxhdpi_10">

        <TextView
            android:id="@+id/delivery_charge_amount_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="$ 22.00"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/t_xxh_15" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/delivery_charge_amount_txt"
            android:text="Delivery Charge"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/t_xxh_15" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/xxhdpi_10"
        android:layout_marginBottom="@dimen/xxhdpi_10"
        android:background="@color/lit_grey" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xxhdpi_5"
        android:layout_marginBottom="@dimen/xxhdpi_5">

        <TextView
            android:id="@+id/total_to_pay_amount_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="$ 22.00"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/t_xxh_18"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/total_to_pay_amount_txt"
            android:text="Collect Cash"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/t_xxh_18"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/xxhdpi_5"
            android:layout_toLeftOf="@+id/total_to_pay_amount_txt"
            android:text="Total:"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/t_xxh_14" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/xxhdpi_10"
        android:layout_marginBottom="@dimen/xxhdpi_10"
        android:background="@color/lit_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xxhdpi_10"
        android:orientation="horizontal"
        android:weightSum="5">

        <ImageView
            android:id="@+id/track_scootor_img"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_scootor_white" />

        <ImageView
            android:id="@+id/track_hotel_img"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_hotel_white" />

        <ImageView
            android:id="@+id/track_cooking_img"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_cooking_white" />

        <ImageView
            android:id="@+id/track_packing_img"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_packing_white" />

        <ImageView
            android:id="@+id/track_wallet_img"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_wallet_white" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/xxhdpi_10"
        android:layout_marginBottom="@dimen/xxhdpi_10"
        android:background="@color/lit_grey" />

    <LinearLayout
        android:id="@+id/btm_accept_reject_btn_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/task_reject_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/xxhdpi_20"
            android:layout_weight="1"
            android:background="#ea1f4b"
            android:text="Reject"
            android:textColor="@color/white"
            android:textSize="@dimen/t_xxh_14" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/task_accept_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/xxhdpi_20"
            android:layout_weight="1"
            android:background="#119e67"
            android:text="Accept"
            android:textColor="@color/white"
            android:textSize="@dimen/t_xxh_14" />

    </LinearLayout>

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/btm_complete_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/xxhdpi_10"
        android:fastScrollEnabled="true"
        card_view:cardCornerRadius="@dimen/xxhdpi_5"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btm_status_update_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="@color/green"
                android:drawableLeft="@drawable/ic_scootor_filled"
                android:drawablePadding="@dimen/xxhdpi_10"
                android:padding="@dimen/xxhdpi_10"
                android:text="Started Towards Restarunt"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/t_xxh_16" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>
