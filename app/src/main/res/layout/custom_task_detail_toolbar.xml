<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:padding="@dimen/xxhdpi_10"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/back_arrow_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_left_white"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/back_arrow_toolbar"
        android:layout_marginLeft="@dimen/xxhdpi_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/action_bar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/t_xxh_16"
            android:textColor="@color/white"
            android:fontFamily="@font/sourcesanspro_regular"
            android:text="@string/app_name"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/xxhdpi_5">

            <TextView
                android:id="@+id/action_bar_date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:06 Pm "
                android:textColor="@color/white"
                android:textSize="@dimen/t_xxh_14"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@color/grey"/>

            <TextView
                android:id="@+id/action_bar_time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text=" 1 Item "
                android:textSize="@dimen/t_xxh_14"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@color/grey"/>

            <TextView
                android:id="@+id/action_bar_item_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text=" 1 Item "
                android:textSize="@dimen/t_xxh_14"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@color/grey"/>

            <TextView
                android:id="@+id/action_bar_amt_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" $ 421.00 "
                android:textColor="@color/white"
                android:textSize="@dimen/t_xxh_14"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>